{"ast":null,"code":"import { ref, onMounted } from 'vue';\nimport { gsap, power3 } from 'gsap';\nimport SplitType from 'split-type';\nexport default {\n  name: 'Intro',\n  props: {},\n  setup() {\n    const items = ref([]);\n    const heroItems = ref([{\n      id: 1,\n      title: \"Radiant\"\n    }, {\n      id: 2,\n      title: \"Ingenious\"\n    }, {\n      id: 3,\n      title: \"Compassion\"\n    }, {\n      id: 4,\n      title: \"Optimism\"\n    }]);\n    onMounted(() => {\n      items.value = document.querySelectorAll('.hero--item');\n      const expand = (item, i) => {\n        items.value.forEach((it, ind) => {\n          if (i === ind) return;\n          it.clicked = false;\n        });\n        gsap.to(items, {\n          width: item.clicked ? '93.4375vw' : '23.4375vw',\n          duration: 2,\n          ease: 'elastic(1, .6)'\n        });\n        item.clicked = !item.clicked;\n        gsap.to(item, {\n          width: item.clicked ? '42vw' : '15vw',\n          duration: 2.5,\n          ease: 'elastic(1, .3)'\n        });\n      };\n      items.value.forEach((item, i) => {\n        item.clicked = false;\n        item.addEventListener('click', () => expand(item, i));\n      });\n    });\n    return {\n      items,\n      heroItems\n    };\n  }\n};","map":{"version":3,"names":["ref","onMounted","gsap","power3","SplitType","name","props","setup","items","heroItems","id","title","value","document","querySelectorAll","expand","item","i","forEach","it","ind","clicked","to","width","duration","ease","addEventListener"],"sources":["C:\\Rico\\portfilo2023\\src\\components\\Layouts\\Main\\Hero.vue"],"sourcesContent":["<template>\r\n  <section class=\"hero\">\r\n   <div class=\"inner\">\r\n    <h2 class=\"hero--title\" >\r\n      <span v-for=\"(item, index ) in heroItems\" :key=\"index\" class=\"hero--item\">{{item.title}}</span>\r\n    </h2>\r\n    <div class=\"hero--layout\">\r\n      <div class=\"hero--slogan\">미래를 꿈꾸며<br /> 끊임없이 도전하라.</div>\r\n      <div class=\"hero--description\">한 번에 하나의 사용자 인터페이스<br />디지털 세상 만들기</div> \r\n\r\n    </div>\r\n   </div>\r\n  </section>\r\n</template>\r\n    \r\n<script>\r\nimport { ref, onMounted } from 'vue';\r\nimport { gsap, power3 } from 'gsap';\r\nimport SplitType from 'split-type'\r\n\r\nexport default {\r\n  name: 'Intro',\r\n  props: {\r\n  },\r\n\r\n  setup() {\r\n    const items = ref([]);\r\n    const heroItems = ref([\r\n        { id: 1, title: \"Radiant\"   },\r\n        { id: 2, title: \"Ingenious\"  },\r\n        { id: 3, title: \"Compassion\" },\r\n        { id: 4, title: \"Optimism\" },\r\n    ]);\r\n\r\n    \r\n    \r\n    onMounted(() => {\r\n      \r\n        items.value = document.querySelectorAll('.hero--item');\r\n\r\n        const expand = (item, i) => {\r\n          items.value.forEach((it, ind) => {\r\n            if (i === ind) return\r\n            it.clicked = false\r\n          })\r\n          gsap.to(items, {\r\n            width: item.clicked ? '93.4375vw' : '23.4375vw',\r\n            duration: 2,\r\n            ease: 'elastic(1, .6)'\r\n          })\r\n\r\n          item.clicked = !item.clicked\r\n          gsap.to(item, {\r\n            width: item.clicked ? '42vw' : '15vw',\r\n            duration: 2.5,\r\n            ease: 'elastic(1, .3)'\r\n          })\r\n        }\r\n\r\n        items.value.forEach((item, i) => {\r\n        item.clicked = false\r\n          item.addEventListener('click', () => expand(item, i))\r\n        })\r\n\r\n\r\n\r\n        \r\n    })\r\n\r\n    return {\r\n      items,\r\n      heroItems\r\n    };\r\n  }\r\n\r\n}\r\n</script>\r\n    \r\n<style lang=\"scss\" scoped>\r\n@import \"@/assets/scss/__variables.scss\"; \r\n  .hero {\r\n    position: relative;\r\n    justify-content: center;\r\n    .inner{ display: block;}\r\n    &--title{\r\n      text-align: center;\r\n      width: 100%;\r\n      white-space: nowrap;\r\n      overflow: hidden;\r\n      span{\r\n        display: inline-block;\r\n        width: vw(450px);\r\n        font-size:vw(800px);\r\n        color: $dpColor;\r\n        font-weight: bold;\r\n        height: 89vh;\r\n        border-radius: 3vw;\r\n        display: inline-block;\r\n        cursor: pointer;\r\n        overflow: hidden;\r\n        &:nth-child(2){\r\n          width: vw(191px);\r\n        }\r\n      }\r\n    }\r\n    &--layout{\r\n      display:flex;\r\n      justify-content: space-between;\r\n    }\r\n    &--slogan{\r\n      font-size:vw(30px);\r\n      color: $dpColor;\r\n      font-weight: 600;\r\n      line-height: 1.3;\r\n      font-family: 'Noto Sans Korean';\r\n    }\r\n    &--description{\r\n      font-size:vw(30px); \r\n      color: $dpColor;\r\n      font-weight: 600;\r\n      line-height: 1.3;\r\n      font-family: 'Noto Sans Korean';\r\n      text-align: right;\r\n    }\r\n    \r\n\r\n  }\r\n\r\n\r\n\r\n\r\n</style>\r\n    "],"mappings":"AAgBA,SAASA,GAAG,EAAEC,SAAQ,QAAS,KAAK;AACpC,SAASC,IAAI,EAAEC,MAAK,QAAS,MAAM;AACnC,OAAOC,SAAQ,MAAO,YAAW;AAEjC,eAAe;EACbC,IAAI,EAAE,OAAO;EACbC,KAAK,EAAE,CACP,CAAC;EAEDC,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIR,GAAG,CAAC,EAAE,CAAC;IACrB,MAAMS,SAAQ,GAAIT,GAAG,CAAC,CAClB;MAAEU,EAAE,EAAE,CAAC;MAAEC,KAAK,EAAE;IAAY,CAAC,EAC7B;MAAED,EAAE,EAAE,CAAC;MAAEC,KAAK,EAAE;IAAa,CAAC,EAC9B;MAAED,EAAE,EAAE,CAAC;MAAEC,KAAK,EAAE;IAAa,CAAC,EAC9B;MAAED,EAAE,EAAE,CAAC;MAAEC,KAAK,EAAE;IAAW,CAAC,CAC/B,CAAC;IAIFV,SAAS,CAAC,MAAM;MAEZO,KAAK,CAACI,KAAI,GAAIC,QAAQ,CAACC,gBAAgB,CAAC,aAAa,CAAC;MAEtD,MAAMC,MAAK,GAAIA,CAACC,IAAI,EAAEC,CAAC,KAAK;QAC1BT,KAAK,CAACI,KAAK,CAACM,OAAO,CAAC,CAACC,EAAE,EAAEC,GAAG,KAAK;UAC/B,IAAIH,CAAA,KAAMG,GAAG,EAAE;UACfD,EAAE,CAACE,OAAM,GAAI,KAAI;QACnB,CAAC;QACDnB,IAAI,CAACoB,EAAE,CAACd,KAAK,EAAE;UACbe,KAAK,EAAEP,IAAI,CAACK,OAAM,GAAI,WAAU,GAAI,WAAW;UAC/CG,QAAQ,EAAE,CAAC;UACXC,IAAI,EAAE;QACR,CAAC;QAEDT,IAAI,CAACK,OAAM,GAAI,CAACL,IAAI,CAACK,OAAM;QAC3BnB,IAAI,CAACoB,EAAE,CAACN,IAAI,EAAE;UACZO,KAAK,EAAEP,IAAI,CAACK,OAAM,GAAI,MAAK,GAAI,MAAM;UACrCG,QAAQ,EAAE,GAAG;UACbC,IAAI,EAAE;QACR,CAAC;MACH;MAEAjB,KAAK,CAACI,KAAK,CAACM,OAAO,CAAC,CAA